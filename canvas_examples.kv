
#: set s dp(150)

<CanvasExampleTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Canvas 1"
        CanvasExample1:
    TabbedPanelItem:
        text: "Canvas 2"
        CanvasExample2:
    TabbedPanelItem:
        text: "Canvas 3"
        CanvasExample3:
    TabbedPanelItem:
        text: "Canvas 4"
        CanvasExample4:
    TabbedPanelItem:
        text: "Canvas 5"
        CanvasExample5:
    TabbedPanelItem:
        text: "Canvas 6"
        CanvasExample6:
    TabbedPanelItem:
        text: "Canvas 7"
        CanvasExample7:


<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            points: (0,0, self.width/4,100, self.width/2,0, 3*self.width/4, 100, self.width,0)
            width: 2

<CanvasExample2>:
    canvas:
        Line:
            width: 2
            points: (0,self.height/2, self.width,self.height/2)
        Line:
            width: 2
            points: (self.width/2,0,  self.width/2,self.height)

<CanvasExample3>:
    canvas:
        Color:
            rgba: 1, 0, 0, .3
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 2
        Line:
            ellipse: (200, 400, 100, 200) # center_x, center_y, width, height
            width: 4
        Color:
            rgba: 0, 0, 1, 1
        Line:
            rectangle: (800, 100, 300, 200) # x, y, width, height
            width: 2

<CanvasExample4>:
    Button:
        pos: 100, 400
        text: "A"
        on_press: root.on_button_a_click()

<CanvasExample6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 1, 0
                Rectangle
                    size: self.size
                    pos: self.pos
        RelativeLayout:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle
                    size: self.size

<CanvasExample7>:
    RelativeLayout:
        canvas:
            Color:
                rgb: 0, 0, 1
            Rectangle
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 0
            Rectangle
                size: self.size